<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/mediumPurple</item>
        <item name="colorAccent">@color/baseColor</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/mediumPurple</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/baseColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/baseColor</item>
    </style>
    <style name="spinner_style">
    <item name="android:padding">15dp</item>
    <item name="android:textColor">@color/mediumPurple</item>
    <item name="android:dropDownWidth">133dp</item>
    <item name="android:showDividers">none</item>
    <item name="android:dividerHeight">10dp</item>

    <item name="android:dropDownHeight">70dp</item>
    <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:color">@color/mediumPurple</item>
    </style>

    <style name="spinnerDropDownStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>
