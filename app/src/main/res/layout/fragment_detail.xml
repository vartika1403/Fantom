<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/entityName"
        android:text="EnityName:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nameTextValue"
        android:layout_marginTop="20dp"
        android:text="entity name"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:autoLink="all"
        android:textColor="@color/fraternityColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/entityName"
        app:layout_constraintTop_toBottomOf="@id/image"/>

    <TextView
        android:id="@+id/fbLink"
        android:text="Fb Link:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/entityName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/fbLinkText"
        android:text="fb linkdbfhefjhegfjehfgejfge"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:autoLink="web"
        android:width="200dp"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/fraternityColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/fbLink"
        app:layout_constraintTop_toBottomOf="@id/entityName"/>

    <TextView
        android:id="@+id/email"
        android:text="Email:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fbLink"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/emailText"
        android:text="email text"
        android:autoLink="email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/fraternityColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/fbLink"/>

    <TextView
        android:id="@+id/webLink"
        android:text="Web Link:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/webLinkText"
        android:text="web link"
        android:autoLink="web"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/fraternityColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toRightOf="@id/webLink"/>

</androidx.constraintlayout.widget.ConstraintLayout>